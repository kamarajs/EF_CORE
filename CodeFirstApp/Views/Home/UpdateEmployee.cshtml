@model IEnumerable<EF.Models.CodeFirstApp.Employees>

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add employees</title>

</head>

<body>

    <form method="post">

        @{

            foreach(var data in @Model){

                <div>

                    <input type="text" name="Employee.Id" value=@ViewBag.id placeholder="Enter id"  required />

                </div>

                <div>

                    <input type="text" name="Employee.Name" value=@data.Name  placeholder="Enter name"  required />

                </div>




                <div>

                    <input type="text" name="Employee.Email" value=@data.Email placeholder="Enter email" required />

                </div>

                <div>

                    <input type="number" name="Employee.Salary" value=@data.Salary placeholder="Enter salary" required />

                </div>

                <div>

                    <input type="date" name="Employee.DatofBirth" value=@data.DatofBirth placeholder="Enter DOB" required />

                </div>

                <div>

                    <input type="text" name="Employee.Department" value=@data.Department placeholder="Enter department" required />

                </div>




            }

        }

       

        <div>

            <a asp-controller="Home" asp-action="UpdateEmployee" ><button type="submit" class="btn btn-primary">Update</button></a>

        </div>

    </form>

</body>

</html>